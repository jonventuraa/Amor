  <div class="card" id="card">
    <h1>Amor, tu amas-me? ‚ù§Ô∏è</h1>
    <button id="sim" onclick="respostaSim()">Sim</button>
    <button id="nao">N√£o</button>
  </div>

  <script>
    const naoBtn = document.getElementById("nao");
    const card = document.getElementById("card");

    function moverBotao() {
      const maxX = card.clientWidth - naoBtn.offsetWidth;
      const maxY = card.clientHeight - naoBtn.offsetHeight;

      const x = Math.random() * maxX;
      const y = Math.random() * maxY;

      naoBtn.style.left = x + "px";
      naoBtn.style.top = y + "px";
    }

    naoBtn.addEventListener("touchstart", moverBotao);
    naoBtn.addEventListener("mouseover", moverBotao);

    function respostaSim() {
      document.body.innerHTML = `
        <div style="
          height:100vh;
          display:flex;
          justify-content:center;
          align-items:center;
          background:linear-gradient(135deg,#ff9a9e,#fad0c4);
          font-family:Arial;
          text-align:center;
        ">
          <h1 style="color:white;font-size:28px;">
            Sabia üòç‚ù§Ô∏è<br>Amo-te!
          </h1>
        </div>
      `;
    }

    moverBotao();
  </script>

